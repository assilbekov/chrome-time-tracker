{
  "manifest_version": 3,

  "name": "Domain time tracker",
  "description": "Track time spent on different domains",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "tabs",
    "windows",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
